# interface <%= @ifname -%> configuration
<% if @auto -%>
auto <%= @ifname %>
<% else -%>
allow-hotplug <%= @ifname %>
<% end -%>
iface <%= @ifname -%> inet static
  address <%= @address %>
  netmask <%= @netmask %>
<% if @broadcast -%>
  broadcast <%= @broadcast %>
<% end -%>
<% if @metric -%>
  metric <%= @metric %>
<% end -%>
<% if @gateway -%>
  gateway <%= @gateway %>
<% end -%>
<% if @pointopoint -%>
  pointopoint <%= @pointopoint %>
<% end -%>
<% if @hwaddress -%>
  hwaddress <%= @hwaddress %>
<% end -%>
<% if @mtu -%>
  mtu <%= @mtu %>
<% end -%>
  