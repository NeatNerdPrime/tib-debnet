# interface <%= @ifname -%> configuration
<% if @auto -%>
auto <%= @ifname %>
<% else -%>
allow-hotplug <%= @ifname %>
<% end -%>
iface <%= @ifname -%> <%= @family -%> dhcp
<% if @hostname -%>
  hostname <%= @hostname %>s
<% end -%>
<% if @metric -%>
  metric <%= @metric -%>
<% end -%>
<% if @leasetime -%>
  leasetime <%= @leasetime -%>
<% end -%>
<% if @vendor -%>
  vendor "<%= @vendor -%>"
<% end -%>
<% if @client -%>
  client "<%= @client -%>"
<% end -%>
<% if @hwaddress -%>
  hwaddress "<%= @hwaddress -%>"
<% end -%>
